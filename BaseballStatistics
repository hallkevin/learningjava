import java.util.Scanner;

public class Statistics {
	public static void main(String[] args) {
		int plateAppearances, atBats, walks, hbp, sacrificeFly, hits, singles, doubles, triples, homeruns;
		Scanner scan = new Scanner(System.in);
		// Gather Stats from Season
		System.out.println("Enter number of Plate Appearances");
		plateAppearances = scan.nextInt();
		System.out.println("Enter number of Walks");
		walks = scan.nextInt();
		System.out.println("Enter number of Hit by Pitches");
		hbp = scan.nextInt();
		System.out.println("Enter number of Sacrifice Flies");
		sacrificeFly = scan.nextInt();
		atBats = plateAppearances - walks - hbp - sacrificeFly;
		System.out.println("Enter number of Singles");
		singles = scan.nextInt();
		System.out.println("Enter number of Doubles");
		doubles = scan.nextInt();
		System.out.println("Enter number of Triples");
		triples = scan.nextInt();
		System.out.println("Enter number of Home Runs");
		homeruns = scan.nextInt();
		// Find total number of hits
		hits = singles + doubles + triples + homeruns;
		// Find total bases
		System.out.println("Total Bases " + getTotalBases(singles, doubles, triples, homeruns));
		// Batting Average
		System.out.println("Batting Average " + getBattingAverage(hits, atBats));
		// On Base Percentage
		System.out.println("On Base Percentage " + getOnBasePercentage(walks, hbp, hits, plateAppearances));
		// Slugging Percentage
		System.out.println("Slugging " + getSluggingPercentage(atBats, singles, doubles, triples, homeruns));
		// OPS
		System.out.println("OPS " + (getSluggingPercentage(atBats, singles, doubles, triples, homeruns) + getOnBasePercentage(walks, hbp, hits, plateAppearances)));
		//getOPS(atBats, hits, walks, hbp, );
		
		scan.close();
	}

	public static double getBattingAverage(int x, int y) {
		return (double) x / y;
	}

	public static double getOnBasePercentage(int w, int x, int y, int z) {
		return (double) (w + x + y) / z;
	}

	public static double getSluggingPercentage(int v, int w, int x, int y, int z) {
		x *= 2;
		y *= 3;
		z *= 4;
		return (double) (w + x + y + z) / v;
	}
	
	public static double getOPS(int s, int t, int u, int v, int w, int x, int y, int z){
		return 0;
	}
	
	public static int getTotalBases(int w, int x, int y, int z){
		return (w) + (x * 2) + (y * 3) + (z * 4);
	}
}
